    "fizik_elektronik_ilgisi": 0.10,
    "sistem_dusuncesi": 0.20,
    "pratik_beceri": 0.15
  },
  "ilgi_alanlari_agirlik": {
    "yazilim_gelistirme": 0.40,
    "algoritma_tasarim": 0.25,
    "sistem_mimarisi": 0.20,
    "veri_analizi": 0.15
  },
  "kritik_sorular": [
    "Bir problemi çözmek için adım adım plan yapar mısın?",
    "Kod yazma fikri seni heyecanlandırıyor mu?",
    "Bilgisayar oyunlarının nasıl yapıldığını merak eder misin?",
    "Algoritma ve mantık problemleri ilgini çeker mi?"
  ]
}
```

